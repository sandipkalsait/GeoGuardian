rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /kyc_blob/{digitalIdHash}/{allPaths=**} {
      allow read: if false; // read via short-lived backend tokens
      allow write: if request.auth != null && request.auth.token.digitalIdHash == digitalIdHash;
    }
    match /evidence/{alertId}/{allPaths=**} {
      allow read: if false; // read via backend or assigned units
      allow write: if request.auth != null;
    }
  }
}
